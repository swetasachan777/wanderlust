<% layout("/layouts/boilerplate") -%>

<div class="row mt-3 signup-page">
    <h1 class="col-6 offset-3 text-center signup-title">Login on Wanderlust</h1>
    <div class="col-6 offset-3 signup-container">
        <form action="/login" method="POST" class="needs-validation p-4 shadow rounded bg-white signup-form" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" 
                id="username"
                type="text"
                class="form-control signup-input"
                required>
               
            </div>
            
          
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" 
                id="password"
                type="password"
                class="form-control signup-input"
                required>
              
            </div>

            <button class="btn btn-success w-100 signup-button">Login</button>
        </form>
    </div>
</div>
